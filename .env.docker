# Environment variables for production deployment
REDIS_URL=redis://redis:6379/0
DATABASE_URL=sqlite:///./data/stocks.db
CACHE_TTL=300
LOG_LEVEL=INFO

# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8080"]

# Stock Data Configuration
DEFAULT_STOCK_PERIOD=1y
MAX_CACHE_SIZE=1000

# ML Model Configuration
MODEL_RETRAIN_INTERVAL=86400  # 24 hours in seconds
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# Sentiment Analysis Configuration
SENTIMENT_CACHE_TTL=1800  # 30 minutes

# Security (change these in production)
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
